@model CozyHotels.ViewModels.AdminGetOrdersViewModel
@{
    ViewBag.Title = "Spa Appointments";
}

<table>
    <tr>
        <th>Customer Name</th>
        <th>Customer Id</th>
        <th>Date</th>
        <th>Time</th>
        <th>Charge</th>
    </tr>
    @foreach (var item in Model.GetSpaAppointments())
    {
        <tr>
            <td>@item.Customer.FirstName + " "+@item.Customer.LastName</td>
            <td>@item.Customer.CustomerId</td>
            <td>@item.Day</td>
            <td>@item.Time</td>
            <td>@Model.Invoice(item.UniqueOrderId).Charge</td>
        </tr>
    }
</table>